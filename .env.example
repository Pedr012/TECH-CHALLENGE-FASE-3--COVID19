# =================================================================
# CONFIGURAÇÕES AWS
# =================================================================

# Credenciais AWS (obtenha no AWS Console)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_SESSION_TOKEN=your_session_token_here_if_using_mfa
AWS_REGION=us-east-1

# Configurações S3
S3_BUCKET=postech-covid19-gp81
S3_BRONZE_PREFIX=bronze
S3_SILVER_PREFIX=silver
S3_GOLD_PREFIX=gold

# =================================================================
# CONFIGURAÇÕES POSTGRESQL
# =================================================================

# Database Connection
POSTGRES_HOST=your_postgres_host
POSTGRES_PORT=5432
POSTGRES_DATABASE=postechcovid
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

# Connection Pool (opcional)
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10

# =================================================================
# CONFIGURAÇÕES DO PROJETO
# =================================================================

# GitHub API (para download dos dados)
GITHUB_API_URL=https://api.github.com/repos/Pedr012/TECH-CHALLENGE-FASE-3---COVID19/contents/BASE_PNAD_COVID

# Configurações de Performance
CHUNK_SIZE=10000
MAX_RETRIES=3
TIMEOUT_SECONDS=300

# =================================================================
# CONFIGURAÇÕES DE LOGGING
# =================================================================

# Níveis: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT='%(asctime)s - %(name)s - %(levelname)s - %(message)s'

# =================================================================
# NOTAS DE SEGURANÇA
# =================================================================
# 
# ⚠️  IMPORTANTE:
# - Nunca commite este arquivo com credenciais reais
# - Use o .env.example como template
# - Adicione .env ao .gitignore
# - Rotacione credenciais periodicamente
#
# =================================================================